#!/bin/bash

export LC_ALL=C
dir=$(pwd)

# build SDF library
mkdir $dir/SDF
git clone https://github.com/keithbennett/SDF_C.git $dir/SDF/C
cd $dir/SDF/C ; make 
git clone https://github.com/keithbennett/SDF_utilities.git $dir/SDF/utilities
cd $dir/SDF/utilities ; ./build
rm -rf $dir/SDF

# copy data
cd $dir
#wget -O data.zip "https://zenodo.org/record/5711101/files/data.zip?download=1"
wget -O data.zip "https://github.com/valenpe7/on_the_electromagnetic-electron_rings/archive/refs/heads/master.zip"

apt-get update
apt-get install p7zip-full
7z x data.zip -o data
rm -f $dir/data.zip
